<autofix>
    <vulnerability sink="snk_xi">
        <!-- just one declassifier -->
        <context pattern=".*" dcl="dcl_xi"/>
    </vulnerability>

    <vulnerability sink="snk_sqli">
        <!-- just one declassifier -->
        <context pattern=".*" dcl="dcl_sqli"/>
    </vulnerability>

    <vulnerability sink="snk_xml">
        <context pattern="&lt;[^&gt;]+[a-zA-Z]+=" dcl="dcl_xmlatt"/>
        <context pattern="[^&lt;]+.*" dcl="dcl_xml"/>
    </vulnerability>

</autofix>

